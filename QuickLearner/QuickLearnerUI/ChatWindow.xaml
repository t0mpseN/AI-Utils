<Window x:Class="QuickLearnerUI.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat com a IA" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ChatStackPanel" />  <!-- ESSA LINHA -->
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBox x:Name="InputBox" Width="600" KeyDown="InputBox_KeyDown" />
            <Button Content="Enviar" Width="100" Margin="10 0 0 0" Click="Enviar_Click"/>
        </StackPanel>
    </Grid>
</Window>
